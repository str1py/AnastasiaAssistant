            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border  Opacity="0.9" Grid.Column="0" Grid.Row="2" Grid.RowSpan="14" Grid.ColumnSpan="6" >
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF350D6E"/>
                        <GradientStop Color="#FF420166" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Viewbox Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="4" >
                <Label Content="Понравившиеся треки" Style="{DynamicResource LabelStyle}" ></Label>
            </Viewbox>

            <Button x:Name="CloseFTList" Grid.Row="2" Style="{DynamicResource MainButtonStyle}" Content="X" Click="CloseFTList_Click"></Button>
            <Button x:Name="ClearFTList" Grid.Row="14" Grid.Column="5" Style="{DynamicResource MainButtonStyle}" Content="Очистить список" Click="ClearFTList_Click"></Button>
            <ListView x:Name="FTListView" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="4" Grid.RowSpan="10" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"></ListView>
        </Grid>
    </Grid>


