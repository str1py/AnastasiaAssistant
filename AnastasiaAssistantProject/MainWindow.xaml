                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF350D6E"/>
                        <GradientStop Color="#FF420166" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Viewbox Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="3">
                <Label x:Name="PopUpLabel1" Style="{DynamicResource LabelStyle}" ></Label>
            </Viewbox>
            <Viewbox Grid.Column="1" Grid.Row="3" Grid.RowSpan="2" Grid.ColumnSpan="3">
                <Label x:Name="PopUpLabel2" Style="{DynamicResource LabelStyle}" ></Label>
            </Viewbox>

        </Grid>

        <Grid  x:Name="FavouriteTrackList" Margin="0,0,0,-0.4" HorizontalAlignment="Right" Width="700" Visibility="Hidden" >
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
