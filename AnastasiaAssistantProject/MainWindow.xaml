<Window x:Class="AnastasiaAssistantProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnastasiaAssistantProject"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:t ="clr-namespace:AnastasiaAssistantProject.AnswersLogic"
        xmlns:my ="clr-namespace:AnastasiaAssistantProject.AnastasiaResources.Elements"
        mc:Ignorable="d"
        Title="MainWindow"  Height="450" Width="700" Style="{DynamicResource MainWindowStyle}" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:ValueAngleConverter x:Key="valueAngleConverter"/>
        <local:ValueTextConverter x:Key="valueTextConverter"/>

        <Storyboard x:Key="sbSettingsMenuShow" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,-700,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>
        <Storyboard x:Key="sbSettingsMenuHide">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,0,-700,0" AccelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>

        <Storyboard x:Key="sbPopUpMenuShow">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,-50,0,0" To="0,0,0,0" DecelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>
        <Storyboard x:Key="sbPopUpMenuHide">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To="0,-50,0,0" AccelerationRatio=".9" Duration="0:0:1" />
        </Storyboard>

        <DataTemplate x:Key="SimpleAnswer">
            <Grid Width="339,2" Height="134" >
                <TextBlock Text="{Binding Answer}" TextWrapping="Wrap" VerticalAlignment="Stretch" Margin="0,17.98,0,6.035" HorizontalAlignment="Left" Foreground="White" FontSize="14" ></TextBlock>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="AnswerWithPict">
            <Grid Width="339,2" Height="134" >
                <Image x:Name="WeatherBack" Margin="0,30,-180,0"  Source="{Binding WeatherBack}" Width="100" Height="120" ></Image>
                <TextBlock Text="{Binding Answer}" TextWrapping="Wrap" VerticalAlignment="Stretch" Margin="0,17.98,0,6.035" HorizontalAlignment="Left" Foreground="White" FontSize="14" ></TextBlock>
            </Grid>
        </DataTemplate>
        <t:TempSelect          
                SimpleAnswer="{StaticResource SimpleAnswer}"  
                AnswerWithPict="{StaticResource AnswerWithPict}"
                x:Key="TS"/>

    </Window.Resources>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*" />
                <RowDefinition Height="33*" />
                <RowDefinition Height="66*" />
                <RowDefinition Height="50*" />
                <RowDefinition Height="50*" />
                <RowDefinition Height="50*" />
                <RowDefinition Height="50*" />
                <RowDefinition Height="50*" />
                <RowDefinition Height="50*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Viewbox x:Name="ProgramName" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Margin="0.2,0,0,1.4" Visibility="Visible">
                <Label  FontSize="36" Height="52" Style="{DynamicResource LabelStyle}">Anastasia Assistant
                </Label>
            </Viewbox>

            <Viewbox Grid.Row="0" Grid.Column="5" HorizontalAlignment="Right"  >
                <Button x:Name="CloseApp" Content="x"   FontSize="16" Click="CloseApp_Click" Width="20" Height="25" Style="{DynamicResource MainButtonStyle}"/>
            </Viewbox>

            <Viewbox  Grid.Row="0" Grid.Column="5"  HorizontalAlignment="Left"   >
                <Button x:Name="AppDown" Content="_"  FontSize="16"  Click="AppDown_Click" Width="20" Height="25" HorizontalAlignment="Left" Style="{DynamicResource MainButtonStyle}"/>
            </Viewbox>

            <Viewbox Grid.Row="0" Grid.Column="5" HorizontalAlignment="Center"  >
                <Button x:Name="Maximize" Content="◻"  Click="Maximize_Click" Width="20" Height="25" Style="{DynamicResource MainButtonStyle}"/>
            </Viewbox>

            <Border BorderThickness="1"  CornerRadius="65" Grid.ColumnSpan="6 " VerticalAlignment="Top" Grid.Row="1" Height="2" Style="{DynamicResource BorderStyle}" />

            <Border BorderThickness="1"  CornerRadius="65" VerticalAlignment="Bottom" Grid.ColumnSpan="6"  Grid.Row="1" Margin="0" Height="2" Style="{DynamicResource BorderStyle}"/>

        </Grid>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TabControl x:Name="MainTab"  Background="{x:Null}" BorderBrush="{x:Null}" Grid.Row="2" Grid.RowSpan="16" Grid.ColumnSpan="6"  >
                <TabItem  Header="Anastasia" Style="{DynamicResource TabButtons}" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>



                        <Viewbox   Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="16"  VerticalAlignment="Center" >
                            <TextBox x:Name="UserMessage" Height="20"  KeyDown="UserMessage_KeyDown" PreviewKeyDown="UserMessage_PreviewKeyDown" Width="361" Style="{DynamicResource TextBoxStyle}" />
                        </Viewbox>

                        <Viewbox  HorizontalAlignment="Right" Grid.Column="2" Grid.Row="10" VerticalAlignment="Center"  >
                            <Button  x:Name="SendButt" Content="Отправить" FontSize="10" Style="{DynamicResource MainButtonStyle}" Click="SendButt_Click" HorizontalAlignment="Right" />
                        </Viewbox>

                        <Viewbox Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="6" Grid.RowSpan="4">
                            <ListView x:Name="MainChat" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="{x:Null}" 
                 IsEnabled="False" Foreground="White"  BorderBrush="{x:Null}" ItemTemplateSelector="{StaticResource TS}"
                  ItemsSource="{Binding TempSelect}"  HorizontalAlignment="Stretch"  Style="{DynamicResource MainChatStyle}" >
                            </ListView>
                        </Viewbox>

                        <Viewbox   Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="5"   HorizontalAlignment="Right" >
                            <Label x:Name="UserCommand"  Foreground="White"    />
                        </Viewbox>

                    </Grid>
                </TabItem>
                <TabItem  Header="Музыка" Style="{DynamicResource TabButtons}" >
                    <TabControl  Background="{x:Null}" BorderBrush="{x:Null}" >
                        <TabItem Header="Плеер" Style="{DynamicResource TabButtons}">
                            <Grid>
                                <Grid x:Name="PlayerGrid" Visibility="Visible" Margin="0,4,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition  />
                                        <ColumnDefinition />
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="4" Grid.Row="3" Grid.RowSpan="10" HorizontalAlignment="Right" BorderThickness="1" BorderBrush="Black">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="5"  Color="Black"  />
                                        </Border.Effect>

                                    </Border>
                                    <Border Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="12"  VerticalAlignment="Bottom"  BorderThickness="1" BorderBrush="Black">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="5"  Color="Black"  />
                                        </Border.Effect>
                                    </Border>

                                    <Image x:Name="TabMusicSongPicture" Stretch="Fill" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="3" Grid.RowSpan="10" >
                                    </Image>



                                    <ListView x:Name="PlayList" Background="{x:Null}" BorderBrush="{x:Null}"  ItemTemplate="{DynamicResource PlayListItems}"
                                              MouseDoubleClick="PlayList_MouseDoubleClick" Visibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
                                          Grid.Row="2" Grid.RowSpan="14" Grid.ColumnSpan="2"  />
                                    <Viewbox Grid.Column="0"  Grid.Row="1"  >
                                        <Label Content="Плэйлист" Style="{DynamicResource LabelStyle}"   Foreground="White" FontSize="15" Height="27"   />
                                    </Viewbox>

                                    <Viewbox Grid.Column="2" Grid.ColumnSpan="4"  Grid.Row="13" >
                                        <Slider Name="sliderTrack"  Value="1"  Background="AliceBlue" Foreground="AliceBlue" Width="400" Style="{DynamicResource TrackSlider}" ValueChanged="sliderTrack_ValueChanged" Thumb.DragStarted="sliderTrack_DragStarted" Thumb.DragCompleted="sliderTrack_DragCompleted" />
                                    </Viewbox>

                                    <Viewbox Grid.Column="5"   Grid.Row="14" Grid.RowSpan="2" >
                                        <Slider Name="SliderVolume" Minimum="0" Maximum="100" Value="50" Background="AliceBlue" Foreground="AliceBlue" Width="200" Style="{DynamicResource TrackSlider}" ValueChanged="SliderVolume_ValueChanged" />
                                    </Viewbox>

                                    <Viewbox Grid.Column="2"  Grid.RowSpan="2" Grid.ColumnSpan="4"   >
                                        <Label x:Name="TabMusicArtist"   Foreground="White" FontFamily="Source Sans Pro Black"  />
                                    </Viewbox>
                                    <Viewbox Grid.Row="1" Grid.RowSpan="2"  Grid.Column="2" Grid.ColumnSpan="4"  >
                                        <Label x:Name="TabMusicSong"    FontFamily="Source Sans Pro Semibold" >
                                            <Label.Foreground>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="White" Offset="0"/>
                                                    <GradientStop Color="#FF62FFEA" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Label.Foreground>
                                        </Label>
                                    </Viewbox>
                                    <Viewbox Grid.Row="14" Grid.Column="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" Grid.RowSpan="2" >
                                        <Button x:Name="TabMusicNext" Content="⏭" FontSize="25"  Height="34" VerticalAlignment="Bottom" Style="{DynamicResource MainButtonStyle}" HorizontalAlignment="Right" Width="40" Click="TabMusicNext_Click" />
                                    </Viewbox>
                                    <Viewbox  Grid.Row="14" Grid.Column="3" HorizontalAlignment="Left" Grid.RowSpan="2" >
                                        <Button x:Name="TabMusicPrev" Content="⏮" FontSize="25" Height="34"  VerticalAlignment="Bottom" Style="{DynamicResource MainButtonStyle}" Click="TabMusicPrev_Click" HorizontalAlignment="Right" Width="40" />
                                    </Viewbox>
                                    <Viewbox Grid.Row="14" Grid.Column="3" Grid.RowSpan="2"  Grid.ColumnSpan="2" HorizontalAlignment="Center"  >
                                        <Button x:Name="TabMusicPlay" Content="▶" FontSize="25" Height="37"  VerticalAlignment="Bottom" Style="{DynamicResource MainButtonStyle}" HorizontalAlignment="Right" Width="75" Click="TabMusicPlay_Click" />
                                    </Viewbox>
                                    <Viewbox Grid.Row="14" Grid.Column="3" Grid.RowSpan="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" >
                                        <Button x:Name="TabMusicPause" Content="◼" FontSize="25" Height="37" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Visibility="Visible" Style="{DynamicResource MainButtonStyle}"  Width="75" Click="TabMusicPause_Click" />
                                    </Viewbox>
                                    <Viewbox  Grid.Row="11" Grid.Column="5"  Grid.ColumnSpan="1" Grid.RowSpan="2" HorizontalAlignment="Center">
                                        <Label x:Name="TabAllTime"  Foreground="White" FontSize="13" />
                                    </Viewbox>
                                    <Viewbox  Grid.Row="11" Grid.Column="2" Grid.ColumnSpan="1" Grid.RowSpan="2" HorizontalAlignment="Center" >
                                        <Label x:Name="TabTimeNow"  Foreground="White" FontSize="13" />
                                    </Viewbox>

                                </Grid>
                                <Grid x:Name="ChangeToPlayerMessageGrid" Visibility="Hidden" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>

                                    </Grid.RowDefinitions>

                                    <Viewbox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Bottom">
                                        <Label Content="'Музыка' находиться в другом режиме . &#xD;&#xA;Чтобы перейти к режиму 'Плеер' нажмите на кнопку." Foreground="White" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" ></Label>
                                    </Viewbox>
                                    <Viewbox Grid.Row="1" Grid.Column="1">
                                        <Button x:Name="ChangeToPlayer" Content="Перейти к плееру" FontSize="20" Style="{DynamicResource MainButtonStyle}"  Click="ChangeToPlayer_Click"></Button>
                                    </Viewbox>

                                </Grid>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Радио" Style="{DynamicResource TabButtons}">
                            <Grid>
                                <Grid x:Name="RadioGrid" Visibility="Visible" Margin="0,5,0,0" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35*" />
                                        <RowDefinition Height="22*" />
                                        <RowDefinition Height="22*" />
                                        <RowDefinition Height="20*" />
                                        <RowDefinition Height="30*" />
                                        <RowDefinition Height="30*" />
                                        <RowDefinition Height="30*" />
                                        <RowDefinition Height="30*" />
                                        <RowDefinition Height="30*" />
                                        <RowDefinition Height="31*" />
                                        <RowDefinition Height="30*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Border  Opacity="0.9" Grid.Column="0" Grid.Row="0" Grid.RowSpan="4" Grid.ColumnSpan="7" >
                                        <Border.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="DarkViolet"/>
                                                <GradientStop Color="SteelBlue" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="5"  Color="Black"  />
                                        </Border.Effect>
                                    </Border>
                                    <Viewbox Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Grid.RowSpan="7" HorizontalAlignment="Center"   >
                                        <ListView x:Name="StationsGroup" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"   SelectionChanged="StationsGroup_SelectionChanged"  >
                                            <ListViewItem Content="Record Online Player"/>
                                            <ListViewItem Content="Moscow Radio Stations"/>
                                            <ListViewItem Content="BBC Radio Stations"/>
                                        </ListView>
                                    </Viewbox>

                                    
                                    <Border Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" Grid.RowSpan="8" BorderThickness="1"  CornerRadius="65"  HorizontalAlignment="Center" Style="{DynamicResource BorderStyle}"  ></Border>
                                    <ListView x:Name="RadioStationsList" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" Grid.Column="2" Grid.ColumnSpan="5"  Grid.Row="4" Grid.RowSpan="9" MouseDoubleClick="RadioStationsList_MouseDoubleClick"  />

                                    <Viewbox Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="1" HorizontalAlignment="Center" VerticalAlignment="Center"   >
                                        <Label x:Name="RadioStationName" FontSize="25"  Foreground="White" Height="45" Style="{DynamicResource LabelStyle}" />
                                    </Viewbox>
                                    <Viewbox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="3" HorizontalAlignment="Center"   >
                                        <Label x:Name="ChannelInfo" FontSize="14" Foreground="White"  />
                                    </Viewbox>
                                    <Viewbox Grid.Column="4" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="1" HorizontalAlignment="Center"  VerticalAlignment="Top"  >
                                        <Button x:Name="Like" Content="❤" Style="{DynamicResource MainButtonStyle}" Click="Like_Click" >
                                            <Button.ToolTip>
                                                <ToolTip>
                                                    Добавить трек в избранное
                                                </ToolTip>
                                            </Button.ToolTip>
                                        </Button>
                                    </Viewbox>
                                    <Viewbox Grid.Column="2"  Grid.ColumnSpan="2" HorizontalAlignment="Center"  Grid.Row="0"   >
                                        <Label x:Name="TrackArtist"  FontSize="15" FontWeight="Bold" Style="{DynamicResource LabelStyle}">
                                            <Label.Foreground>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="White" Offset="0"/>
                                                    <GradientStop Color="#FF62FFEA" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Label.Foreground>
                                        </Label>
                                    </Viewbox>
                                    <Viewbox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Center"   >
                                        <Label x:Name="TrackName"  FontSize="14"  Style="{DynamicResource LabelStyle}"   >
                                            <Label.Foreground>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#FF62FFEA" Offset="0"/>
                                                    <GradientStop Color="White" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Label.Foreground>
                                        </Label>
                                    </Viewbox>
                                    <Viewbox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2"  HorizontalAlignment="Center"   >
                                        <Button x:Name="PlayRadio" Content="▶" FontSize="50" Style="{DynamicResource MainButtonStyle}"  Click="PlayRadio_Click" Visibility="Hidden" ></Button>
                                    </Viewbox>
                                    <Viewbox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Center"   >
                                        <Button x:Name="StopRadio" Content="◼" FontSize="50" Style="{DynamicResource MainButtonStyle}"  Visibility="Hidden" Click="StopRadio_Click" ></Button>
                                    </Viewbox>

                                    <Viewbox Grid.Column="4"  Grid.ColumnSpan="2" Grid.RowSpan="2"  >
                                        <Slider Name="SliderVolumeRadio" Minimum="0" Maximum="100"  Value="50"  Background="AliceBlue" Foreground="AliceBlue" Width="200" Style="{DynamicResource TrackSlider}" ValueChanged="SliderVolumeRadio_ValueChanged" />
                                    </Viewbox>
                                </Grid>
                                <Grid x:Name="ChangeToRadioMessageGrid" Visibility="Hidden">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />

                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Viewbox  VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.ColumnSpan="3" >
                                        <Label Content="'Музыка' находиться в другом режиме. &#xD;&#xA;Чтобы перейти к режиму 'Радио' нажмите на кнопку." Foreground="White" FontSize="20" ></Label>
                                    </Viewbox>
                                    <Viewbox Grid.Row="1" Grid.Column="1" >
                                        <Button x:Name="ChangeToRadioButton" Content="Перейти к радио"  Style="{DynamicResource MainButtonStyle}" Click="ChangeToRadioButton_Click"></Button>
                                    </Viewbox>

                                </Grid>
                            </Grid>
                        </TabItem>
                  

                    </TabControl>
                </TabItem>
                <TabItem Header="                                                                                        "  Style="{DynamicResource TabButtons}" HorizontalAlignment="Right" IsEnabled="False">
                    <Grid>
                    </Grid>
                </TabItem>
                <TabItem  Header="О программе" Style="{DynamicResource TabButtons}" HorizontalAlignment="Right" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </TabItem>
                <TabItem  Header="Обновления" Style="{DynamicResource TabButtons}" HorizontalAlignment="Right" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Viewbox Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1">
                            <Label Content="Обновление программы"  FontWeight="Bold" Style="{DynamicResource LabelStyle}" ></Label>
                        </Viewbox>
                        <Viewbox Grid.Row="3" Grid.ColumnSpan="3" HorizontalAlignment="Left">
                            <Label x:Name="CurrectVersion" Style="{DynamicResource LabelStyle}"   />
                        </Viewbox>
                        <Viewbox  Grid.Row="4" Grid.ColumnSpan="3" HorizontalAlignment="Left">
                            <Label x:Name="LastCheckUpdate" Style="{DynamicResource LabelStyle}" />
                        </Viewbox>
                        <Viewbox  Grid.Row="5" Grid.ColumnSpan="3" HorizontalAlignment="Left">
                            <Label x:Name="VersionMessage" Style="{DynamicResource LabelStyle}"/>
                        </Viewbox>
                        <Viewbox  Grid.Row="7" Grid.ColumnSpan="3" Grid.RowSpan="3" >
                            <Button x:Name="CheckUpdateButton" Content="Проверить наличие обновлений"  Style="{DynamicResource MainButtonStyle}" Click="CheckUpdateButton_Click" />
                        </Viewbox>
                        <Viewbox  Grid.Row="7" Grid.ColumnSpan="3" Grid.RowSpan="3" >
